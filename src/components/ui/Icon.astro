---
import { Icon as AstroIcon } from "astro-icon";
import { cva } from "class-variance-authority";
import { twMerge } from "tailwind-merge";

export type IconProps = {
  name: string;
  size?: "sm" | "md" | "lg";
  class?: string;
};

const iconVariants = cva("", {
  variants: {
    size: {
      sm: "h-4 w-4",
      md: "h-6 w-6",
      lg: "h-8 w-8",
    },
  },
  defaultVariants: { size: "md" },
});

const { name, size, class: className } = Astro.props as IconProps;
---

<AstroIcon
  name={name}
  class="h-6 w-6"
  class={twMerge(iconVariants({ size, className }))}
/>
