---
import Button from "@/components/ui/Button.astro";

import { getLangFromUrl } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
---

<Button
  as="a"
  variant="outline-dimmed"
  class="text-xs lg:text-sm bg-foreground/10 hover:bg-foreground/20"
  href={"/files/Lucas_Cubilla_-_Frontend_Developer_ENG.pdf"}
  download="Lucas_Cubilla_-_Frontend_Developer_ENG.pdf"
  target="_blank"
  rel="noopener noreferrer"
>
  {lang === "en" ? "Download CV" : "Descargar CV"}
</Button>
