---
import { twMerge } from "tailwind-merge";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { ui } from "@/i18n/ui";
import Button from "@/components/ui/Button.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { class: className } = Astro.props;
---

<nav
  id="mobile-navigation"
  class={twMerge(
    "fixed h-full w-full z-[30] bg-background flex items-center  translate-x-full transition-transform duration-300",
    className,
  )}
>
  <ul class="flex flex-col gap-4">
    {
      Object.entries(ui[lang])
        .filter(([key, label]) => key.includes("nav"))
        .map(([key, label]) => (
          <li>
            <Button
              as="a"
              variant="ghost"
              href={"#" + label.replace(/\s/g, "_").toLowerCase()}
              class="inline-block text-4xl transition uppercase font-normal"
            >
              {label.split(" ")[0]}
            </Button>
          </li>
        ))
    }
  </ul>
</nav>
