---
import { twMerge } from "tailwind-merge";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { ui } from "@/i18n/ui";
import Button from "@/components/ui/Button.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { class: className } = Astro.props;
---

<nav class={twMerge("hidden lg:flex justify-center items-center", className)}>
  {
    Object.entries(ui[lang])
      .filter(([key, label]) => key.includes("nav"))
      .map(([key, label]) => (
        <Button
          as="a"
          variant="ghost"
          href={"#" + label.replace(/\s/g, "_").toLowerCase()}
          class="inline-block text-xs transition hover:text-white uppercase"
        >
          {label.split(" ")[0]}
        </Button>
      ))
  }
</nav>
