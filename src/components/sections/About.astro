---
import SectionWrapper from "@/components/ui/SectionWrapper.astro";
import Text from "@/components/ui/Text.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

type About = {
  title: string;
  description: string;
  content: string[];
};

const about: About = t("about");
---

<SectionWrapper title={about.title} description={about.description}>
  {
    about.content.map((el, index) => (
      <Text as="p" variant="paragraph" class={index === 0 ? "mt-0" : ""}>
        {el}
      </Text>
    ))
  }
</SectionWrapper>
