---
import LanguageSwitcher from "@/components/ui/LanguageSwitcher.astro";
import Container from "../ui/Container.astro";
import Logo from "../ui/Logo.astro";
import Navigation from "../ui/Navigation.astro";
import DownloadCV from "../ui/DownloadCV.astro";
import ThemeToggle from "@/components/ui/ThemeToggle.astro";
import MobileNavToggle from "@/components/ui/MobileNavToggle.astro";
import MobileNavigation from "@/components/ui/MobileNavigation.astro";
---

<div class="sticky top-0 left-0 z-50 border-b border-foreground/10">
  <Container class="bg-background/30 backdrop-blur-lg">
    <header id="header" class="flex justify-between items-center py-4">
      <div class="flex-1">
        <Logo class="text-start" />
      </div>
      <Navigation class="flex-1 hidden lg:block" />
      <span class="flex items-center justify-end flex-1 gap-2">
        <LanguageSwitcher />
        <ThemeToggle />
        <DownloadCV />
      </span>
      <MobileNavToggle />
    </header>
  </Container>
</div>
