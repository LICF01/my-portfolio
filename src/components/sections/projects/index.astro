---
import ProjectCard from "@/components/sections/projects/ProjectCard.astro";
import SectionWrapper from "@/components/ui/SectionWrapper.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<SectionWrapper
  title="Projects"
  description="Showcasing my development journey through key projects in front-end design and coding."
  class="group"
>
  <div class="flex flex-col lg:flex-row gap-4">
    {
      projects
        .sort(
          (a, b) =>
            new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
        )
        .map(({ data }) => <ProjectCard data={data} />)
    }
  </div>
</SectionWrapper>
