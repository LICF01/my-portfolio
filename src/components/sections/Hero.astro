---
import SectionWrapper from "../ui/SectionWrapper.astro";
import Text from "../ui/Text.astro";
import Divider from "../ui/Divider.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const greet = t("hero.greet");
const name = t("hero.name");
const role = t("hero.role");
const rest = t("hero.rest");
const description = t("hero.description");
---

<SectionWrapper class="relative max-w-6xl" divider={false}>
  <div class="flex flex-col justify-center gap-2 mb-32">
    <Text as="h1" variant="hero">
      <span class="text-4xl text-foreground/70">
        {greet}
      </span>
      <br />
      {name}
      <br />
      <span class="text-accent"> {role}</span>
      <br />
      {rest}
    </Text>
    <Divider />
    <Text as="p" variant="lead">
      {description}
    </Text>
  </div>
</SectionWrapper>
