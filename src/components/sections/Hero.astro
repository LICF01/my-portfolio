---
import SectionWrapper from "../ui/SectionWrapper.astro";
import Text from "../ui/Text.astro";
import Divider from "../ui/Divider.astro";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<SectionWrapper class="relative max-w-6xl" divider={false}>
  <div class="flex flex-col justify-center gap-2 mb-32">
    <Text as="h1" variant="hero">
      {t("hero").greet}
      <br />
      <span class="text-accent"> {t("hero").role}</span>
      <br />
      {t("hero").rest}
    </Text>
    <Divider />
    <Text as="p" variant="lead" class="text-white/50">
      {t("hero").description}
    </Text>
  </div>
</SectionWrapper>
